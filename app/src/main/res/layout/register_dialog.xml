<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="16dp"
    app:cardCornerRadius="8dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!-- Content -->
            <!-- Rengwuxian maretial -->
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_name"
                android:hint="@string/registerName"
                android:textSize="18sp"
                android:inputType="text"
                app:met_floatingLabel="highlight"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_address"
                android:hint="@string/registerAddress"
                android:textSize="18sp"
                android:inputType="text"
                app:met_floatingLabel="highlight"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_datetime"
                android:hint="@string/registerDateTime"
                android:textSize="20sp"
                android:digits="1234567890-"
                app:met_floatingLabel="highlight"
                />
        </LinearLayout>
        <!-- Continue register Button -->
        <Button
            android:id="@+id/button_register_continue"
            android:text="@string/button_register_continue"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            style="@style/button_login_intro"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>