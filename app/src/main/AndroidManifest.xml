<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shop.fruit.fruitshopbeta3">

    <!-- USES -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_fruit_shop_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_fruit_shop_icon_round"
        android:supportsRtl="true"
        android:theme="@style/GreenTheme">
        <!-- facebook application data -->
        <meta-data android:name="com.facebook.accountkit.ApplicationName" android:value="@string/app_name" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/FACEBOOK_APP_ID" />
        <meta-data android:name="com.facebook.accountkit.ClientToken" android:value="@string/ACCOUNT_KIT_TOKEN_CLIENT" />
        <!-- Activity facebook -->
        <activity android:name="com.facebook.accountkit.ui.AccountKitActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>